extends layout

block content
	h1= title
	form#formAddTask(name="addtask", method="post", action="/addtask")
		input#inputTaskTitle(type="text", placeholder="title", name="title")
		input#inputTaskDealine(type="text", placeholder="deadline", name="deadline")
		input#inputTaskLocation(type="text", placeholder="location", name="location")
		input#inputTaskDone(type="checkbox", name="done")
		button#btnSubmit(type="submit") submit